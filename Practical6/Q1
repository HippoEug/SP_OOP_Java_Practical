import java.util.Random;

public class Q1DieRandom {
	public static void main(String args[]) {
		DieX die = new DieX();
	
		System.out.print("The new value of the dice after rolling is: " + die.roll());
	}
}

class DieX {
	int numFaces = 6; //I don't know what to do with this lol
	
	int roll() {
		Random random = new Random();
		int dieRandVal;
		
		dieRandVal = random.nextInt(numFaces) + 1;
		return (dieRandVal);
	}
}
