public class Q2ArraryAverage {
	public static void main(String args[]) {
		//double[] array = new float[8];
		double[] array = {1.5, 20.3, 4.5, 5.5, 10.3, 450, 20.4, -22.3};
		double[] array2 = {99, 50, 70.5};
		
		avgArry(array2);
		
		System.out.println("The average is: " + avgArry(array2));
	}
	public static double avgArry(double[] a) {
		
		double total = 0, average;
		
		for (int i=0; i<a.length; i++) {
			total = total + a[i];
		}
		average = total/a.length;
		return average;
	}
}
